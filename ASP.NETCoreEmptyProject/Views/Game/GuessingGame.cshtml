@{
    ViewData["Title"] = "GuessingGame";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Guessing Game </h1>
</div>
<div class="text-center">
    <img src="/imgs/game.jpeg" width="400" height="150" />
</div>
@if (ViewBag.SessionMessageRandom != null)
{
    <div>
        <h4>The Random Number is: @ViewBag.SessionMessageRandom</h4>

    </div>
}
@*@if (ViewBag.SessionMessageUser != null)
{
    <div>

        <h4>The User Number is: @ViewBag.SessionMessageUser</h4>
    </div>
}*@
@if (ViewBag.GreetingMessage != null)
{
    <p>@ViewBag.GreetingMessage</p>
}
@if (ViewBag.GameMessage != null)
{
    <p>@ViewBag.GameMessage</p>
}
<div class="feverCheck-form">
    <form asp-controller="Game" asp-action="GuessingGame" method="post">

        <div class="row">
            <div class="col-25">
                <label> Number </label>
            </div>
            <div class="col-75">
                <input type="number" name="number" />
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Guess" />
        </div>

    </form>
</div>
