@model List<ASP.NETCoreEmptyProject.Models.LanguageModel>

@{
    ViewData["Title"] = "People";
}
<div class="text-center">
    <h3>Languages and People</h3>
</div>
<div class="container">

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Person ID</th>
                    <th>Language</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                    @foreach (var p in item.PeopleLanguages)
                     {
                        <tr>
                            <td>@p.PersonId</td>
                            <td>@p.language.Language</td>
                        </tr>
                     }

                 }


            </tbody>
        </table>

    </div>
</div>
