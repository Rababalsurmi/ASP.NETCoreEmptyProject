@model IEnumerable<ASP.NETCoreEmptyProject.Models.PersonModel>

@{
    ViewData["Title"] = "People";
}
<div class="text-center">
    <h3>People</h3>
</div>
<div class="container">

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>City</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PersonId</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.City.CityName</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

<div>
    <ul>
        <li>
            <a class="btn btn-primary" asp-controller="Country" asp-action="Country">Countries</a>
        </li>
        <li>
            <a class="btn btn-primary" asp-controller="City" asp-action="City">Cities</a>
        </li>
        <li>
            <a class="btn btn-primary" asp-controller="Language" asp-action="Language">Languages</a>
        </li>
    </ul>

</div>
