@model ASP.NETCoreEmptyProject.Models.PersonModel


@{
    ViewData["Title"] = "Create Person";
}

<div class="text-center">
    <h3>Create Person</h3>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-lable"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-lable"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentCityId" class="control-lable"></label>
                <input asp-for=" CurrentCityId" class="form-control" />
                <span asp-validation-for=" CurrentCityId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="PeopleLanguages" class="control-lable"></label>
                    <input asp-for=" PeopleLanguages" class="form-control" />
                    <span asp-validation-for=" PeopleLanguages" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" class="btn btn-primary" name="btnCreatePerson" value="Create" />
            </div>
        </form>

    </div>

</div>

<div>
    <a asp-action="People">Back To List</a>
</div>


