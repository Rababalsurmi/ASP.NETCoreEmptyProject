@model List<ASP.NETCoreEmptyProject.Models.CountryModel>

@{
    ViewData["Title"] = "People";
}
<div class="text-center">
    <h3>Countries and Cities</h3>
</div>

<a asp-action="CreateCountry">Create</a>

<div class="container">

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Country</th>
                    <th>City</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.CountryName</td>

                        <td>
                            @foreach (var c in item.Cities)
                            {
                                @c.CityName
                            }
                        </td>
                        <td> @Html.ActionLink("Edit", "EditCountry", new { countryName = @item.CountryName }) | @Html.ActionLink("Delete", "DeleteCountry", new { countryName = @item.CountryName }) </td>
                    </tr>
                 }
            </tbody>
        </table>

    </div>
</div>
