@model ASP.NETCoreEmptyProject.Models.CountryModel

@{
    ViewData["Title"] = "EditCountry";
}

<h2>Edit Country</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCountry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountryName" />
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Country">Back to List</a>
</div>